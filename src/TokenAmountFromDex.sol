interface DexPairLike {
    function sync()        external;
    function token0()      external view returns (address);
    function token1()      external view returns (address);
    function getReserves() external view returns (uint112, uint112, uint32);  // reserve0, reserve1, blockTimestampLast
}

contract TokenAmountFromDex is Ownable {
    using SafeMath for uint256;
    
    DexPairLike public pairContract; // dex tokens pair
    
    event SetPairContract(DexPairLike pairContract);
    
    constructor(DexPairLike _pairContract) public {
        pairContract = _pairContract;
    }
    
    // Update the harvest fee ratio
    function setPairContract(DexPairLike _pairContract) external onlyOwner {
        require(_pairContract != DexPairLike(0), "pairContract can not be zero!");
        pairContract = _pairContract;
        emit SetPairContract(_pairContract);
    }
    
    // get the token0 amount from the token1 amount
    function getTokenAmount(address _token0, address _token1, uint256 _token1Amount) external view returns (uint256){ 
        require(_token0 != address(0) && _token1 != address(0), "token0 and token1 can not be zero!");
        require((_token0 == pairContract.token0() || _token0 == pairContract.token1()) && (_token1 == pairContract.token0() || _token1 == pairContract.token1()), "Token must pair with pairContract!");
        if(_token0 == _token1){
            return _token1Amount;
        }
        (uint112 reserve0, uint112 reserve1, ) = pairContract.getReserves();
        if(_token0 == pairContract.token0()){
            if(reserve1 > 0){
                return _token1Amount.mul(reserve0).div(reserve1);
            }
        }else{
            if(reserve0 > 0){
                return _token1Amount.mul(reserve1).div(reserve0);
            }
        }
        return 0;
    }
}
